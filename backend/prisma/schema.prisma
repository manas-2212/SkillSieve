generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  skills    String[]
  createdAt DateTime @default(now())
}

model Internship {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  company   String
  skills    String[]
  location  String?
  stipend   String?
  createdAt DateTime @default(now())
}
